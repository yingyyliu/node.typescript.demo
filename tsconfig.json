{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["es2022"],
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "@types/jest"],
    "typeRoots" : ["./node_modules/@types"],

    "outDir": "build",
    "rootDir": "src",
  },
  "include": ["src/**/*"],
  "exclude" : ["src/**/*.spec.ts"]
}